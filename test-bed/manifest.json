{
  "manifest_version": 3,
  "name": "ai-girlfriend-archiver-test-bed",
  "version": "0.0.1",
  "description": "Archives your GF",
  "icons": {
    "48": "icons/logo_48.png",
    "96": "icons/logo_96.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "48": "icons/logo_48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.copilot.microsoft.com/*",
        "*://*.gemini.google.com/*",
        "*://*.claude.ai/*",
        "*://*.perplexity.ai/*",
        "*://*.grok.com/*",
        "*://*.chat.deepseek.com/*"
      ],
      "js": [
        "content.js",
        "jszip.min.js",
        "FileSaver.min.js"
      ]
    }
  ]
}
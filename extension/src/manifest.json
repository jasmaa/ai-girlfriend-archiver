{
  "manifest_version": 3,
  "name": "AI Girlfriend Archiver",
  "version": "<AUTO-GENERATED>",
  "description": "Archives conversations from AI chatbots.",
  "icons": {
    "48": "icons/logo_48.png",
    "96": "icons/logo_96.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "48": "icons/logo_48.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.copilot.microsoft.com/*",
        "*://*.gemini.google.com/*",
        "*://*.claude.ai/*",
        "*://*.perplexity.ai/*",
        "*://*.grok.com/*",
        "*://*.chat.deepseek.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage"]
}
